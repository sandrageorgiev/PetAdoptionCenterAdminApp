<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PACAdminApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PACAdminApp.styles.css" asp-append-version="true" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css" rel="stylesheet" />
    <link rel="icon" href="https://i.imgur.com/wRdvmlT.png" type="image/x-icon" />


    <style>
        html, body {
            height: 100%; /* Full height for the body */
            margin: 0; /* Remove default margin */
        }

        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh; /* Full viewport height */
        }

        main {
            flex: 1; /* Push footer to bottom */
        }

        li > a {
            font-size: 16px; /* Initial font size */
            transition: transform 0.5s ease, background-color 0.3s ease; /* Smooth transition for scaling and background color */
            display: inline-block; /* Ensure it behaves like a block-level element for transformation */
        }

            li > a:hover {
                border-radius: 15px;
                transform: scale(1.03); /* Slightly increase the size without affecting layout */
            }

        li:hover {
            color: gray;
        }

        .footer {
            background-color: #f8f9fa;
            padding: 20px 0;
            text-align: center;
        }

    </style>


</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Pets" asp-action="Index">
                    <img width="270px;" src="https://i.imgur.com/Bj39Fw5.png" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                       @*  <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li> *@
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer style="background-color: white; color: black; text-align: center; padding: 20px 0;">

        <div style="display: flex; align-items: center; justify-content: center; margin-bottom: 20px;">
            <div style="flex-grow: 1; height: 1px; background-color: black; margin: 0 40px;"></div>
            <div>
                <a href="#" style="margin: 0 10px; color: black; text-decoration: none;">
                    <img src="https://e7.pngegg.com/pngimages/201/692/png-clipart-logo-facebook-black-and-white-computer-icons-facebook-photography-logo-thumbnail.png" alt="Facebook" style="width: 24px; height: 24px;">
                </a>
                <a href="#" style="margin: 0 10px; color: black; text-decoration: none;">
                    <img src="https://www.iconpacks.net/icons/2/free-instagram-logo-icon-3497-thumb.png" alt="Instagram" style="width: 24px; height: 24px;">
                </a>
                <a href="#" style="margin: 0 10px; color: black; text-decoration: none;">
                    <img src="https://toppng.com/uploads/preview/square-vector-button-youtube-icon-black-and-white-115632735274l2fm8q6q0.png" alt="YouTube" style="width: 24px; height: 24px;">
                </a>
                <a href="#" style="margin: 0 10px; color: black; text-decoration: none;">
                    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRWNMxoB1q44P7DoOXN3w4N2fyrSjn2_8wt-w&s" alt="Twitter" style="width: 24px; height: 24px;">
                </a>
                <a href="#" style="margin: 0 10px; color: black; text-decoration: none;">
                    <img src="https://cdn-icons-png.flaticon.com/512/2582/2582575.png" alt="LinkedIn" style="width: 24px; height: 24px;">
                </a>
                <a href="#" style="margin: 0 10px; color: white; text-decoration: none;">
                    <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTXA9ov34Ddn69hKXB3L-pjbcjI9fbK1hfXTg&s" alt="TikTok" style="width: 24px; height: 24px;">
                </a>
            </div>
            <div style="flex-grow: 1; height: 1px; background-color: black; margin: 0 40px;"></div>
        </div>

        <div style="margin-bottom: 20px;">
            <p style="">Copyright © 2024 HubSpot, Inc.</p>
            <span>
                @*                 <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQ_Sp2uPM6sXSqHpNVRmMYz0ljT6IL5YfYrBw&s" width="50px" />
                *@               <img width="200px" src="https://i.imgur.com/S8rJqea.png" />
            </span>
        </div>

        <div>
            <a href="#" style="margin: 0 10px; color: black; text-decoration: none;">Home</a>
            <a href="#" style="margin: 0 10px; color: black; text-decoration: none;">Privacy Policy</a>
            <a href="#" style="margin: 0 10px; color: black; text-decoration: none;">Shelters</a>
            <a href="#" style="margin: 0 10px; color: black; text-decoration: none;">Pets</a>
            <a href="#" style="margin: 0 10px; color: black; text-decoration: none;">Applications</a>
        </div>
    </footer>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
