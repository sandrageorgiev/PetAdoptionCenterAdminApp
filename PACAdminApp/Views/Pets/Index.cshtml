@model IEnumerable<PACAdminApp.Models.Pet>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<a asp-controller="Pets" asp-action="ExportAllPets" class="btn btn-info">Export Pets</a>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PetType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Breed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sex)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsHouseTrained)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FavouriteThings)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HomeRequirements)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhotoUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PetStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Shelter)
            </th>
            <th></th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PetType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Breed)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sex)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsHouseTrained)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FavouriteThings)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HomeRequirements)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhotoUrl)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PetStatus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Shelter.Id)
                </td>

                <td><a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a></td>

            </tr>
        }
    </tbody>
</table>
